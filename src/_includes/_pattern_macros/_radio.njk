{% macro radioitems(title) %}

<div class="col-md-6 form-check">
  <input class="form-check-input" type="checkbox" value="" id="{{ title }}Check">
  <label class="form-check-label" for="{{ title }}Check">
    {{ title }}
  </label>
</div>


{% endmacro %}



